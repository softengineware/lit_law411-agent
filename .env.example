# lit_law411-agent Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# Three-Database Strategy Configuration
# ========================================

# Airtable (Visual Interface Layer)
# Get your API key from: https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Supabase PostgreSQL (Relational Data Layer)
# Get from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Pinecone (Vector Search Layer)
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=lit_law411

# ========================================
# External API Configuration
# ========================================

# YouTube Data API v3
# Get from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (for Whisper transcription and embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# Database & Cache Configuration
# ========================================

# PostgreSQL Database (Main application database)
DATABASE_URL=postgresql://user:password@localhost:5432/lit_law411

# Redis (Cache and Message Broker)
REDIS_URL=redis://localhost:6379

# Elasticsearch (Full-text search)
ELASTICSEARCH_URL=http://localhost:9200

# ========================================
# Synchronization Settings
# ========================================

# Batch size for data synchronization
SYNC_BATCH_SIZE=10

# Maximum retry attempts for sync operations
SYNC_MAX_RETRIES=5

# Initial retry delay in seconds
SYNC_RETRY_DELAY=1

# Enable consistency checks
CONSISTENCY_CHECK_ENABLED=true

# Tolerance for consistency checks (in seconds)
CONSISTENCY_TOLERANCE_SECONDS=5

# ========================================
# Application Settings
# ========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Number of worker processes
WORKERS=4

# API rate limiting (requests per minute)
RATE_LIMIT_ANONYMOUS=10
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_PREMIUM=1000

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Expiration (in minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# Security Settings
# ========================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your_session_secret_here

# ========================================
# Monitoring & Analytics
# ========================================

# Sentry DSN (for error tracking)
SENTRY_DSN=

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=9090

# ========================================
# External Services (Optional)
# ========================================

# Stripe (for billing - optional)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid (for email notifications - optional)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@law411.com

# AWS (for S3 storage - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=